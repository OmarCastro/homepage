@require "variables.styl";
@require "navigation.styl";
@require "page.styl";
@require "skills.styl";


:root{
  margin-top 60px;
}

body, html
  margin: 0
  font-family: Quicksand
  overflow-x: hidden
  height: 100%

.title
  font-size: titlesize
  text-align: center
  margin: 3em
  > span
    padding: 10px
    border: black 2px solid

.indexlink{
  margin: 1em;
  color: #369;
  text-align: center;
  padding: 10px;
  border: #369 2px solid;
  display: block;
  text-decoration: none;
  font-family: "Open sans";
  &:hover{
    color: white;
    background-color: #369;
  }
}

//topbar start

.top-bar
  z-index: 2;
  padding: 0
  margin: 0
  position: fixed
  top: 0
  left: 0
  right: 0
  background: white;
  font-size: 16px;
  height: topBarHeight
  line-height: topBarHeight
  text-transform: uppercase;
  border-bottom: #369 1px solid;
  font-family: Open Sans;  
  a
    color: #333;
    text-decoration: none;

.topbar-buttons
  float right 
  @media (max-width: 900px)
    > .topbar-button:before
      content: none;
  @media (max-width: 720px)
    display: none;

.topbar-button
  display: inline-block;
  height: topBarHeight;
  color: #555;
  text-decoration: none;
  background: none;
  float: left;
  outline none
  padding: 0px 20px;
  &:hover
     color: white;
     background: #336699;
  &:before
    font-size: 20px;
    margin-right: 0.5em; 
.pagelink.active
  color #47a 
  &:hover
   color white

//topbar end

.swipe-notification
  position absolute
  bottom 0
  right 0
  margin 1em

/*
* PROFILE PAGE START
*/

.profile
  display block
  width 100%

.profile-canvas
  display: inline-block;
  max-width: 20%;
  text-align: center;
  margin: 1.5em 5%;
  float: left;
  @media mqSmartphone_portrait
    max-width: 50%;
    width: 50%;
    margin: 1.5em auto;
    float: none;
    display: block;

.profile-image
  border-radius: 50%
  width: 100%

.profile-text
  display: inline-block
  width: 60%
  margin:1.5em 5%
  @media mqSmartphone_portrait
    width: 100%
    margin: 0
    margin-bottom: 3em

/*
* PROFILE PAGE END
*/



/*
* WORKS PAGE START
*/

.work{
  position: relative;
  margin-bottom: 5em;
}

.work-description{
  float: left;
  display: inline-block;
  max-width: 60%;   
}

.work-canvas{
  float: left;
  display: inline-block;
  max-width: 30%; 
  margin: 0 5%;
}

.work-image{
  border-radius: 3%;
  width: 100%; 
}

/*
* WORKS PAGE END
*/

/*
*  CONTACT PAGE START
*/

.contact{
  display: flex;
  min-height: calc(100vh - 100px);
  align-items: center;
  text-align: center;
  justify-content:space-around;
  flex-flow: wrap;
  
  @media (orientation: portrait){
    flex-flow: column;
  }


}


.qr-contact,.contact-info{
  margin-top: 10px;
  text-align: center;
   display: inline-block;
  max-width: 45%;
  margin-bottom: 1em;
  
  img{
    width: 100%; 
  }
  
}


.contact-box{
  text-align: center;
  white-space: nowrap;
  font-size: 15px;
  flex-shrink: 0;
  a {
   text-decoration: none;
    color: initial;
  }
}

.contact-info{
 display: inline-block;
  text-align: left;
}

.social-icons{
  text-align: center;
}

.social-icon{
  font-size: 50px;
  margin: 0 20px; 

}

/*
*  CONTACT PAGE END
*/



.clearfloat{
   clear: both; 
}

//mobile

body.phone
{
  
  .contact-info,.qr-contact{
  min-width: 100%; 
  max-width: 100%;

  }
  
  @media (orientation: landscape){
    .contact-info{
        min-width: 45%; 
        max-width: 45%;
    }
    
    .qr-contact{
      img{
        width: 30%;
      }
    }
  }
         
  .page.out-of-current{
    display: none;
  }
  
  .swipe-notification{
    left: -20px;
    right: -20px;
    padding-top: 1em;
    text-align: center;    
    border-top: #369 1.5px solid;
  }
  
  
  
.work{
  position: relative;
  margin-bottom: 0;
  &:last-of-type{
    margin-bottom: 2em; 
  }
}

.work-description{
  max-width: 100%;  
}

.work-canvas{
  display: none;
}

}

.swipe-notification{display: none}

.main-introduction{
  position: relative;
  height: 100%; 
  background-image: url("../imgs/background.jpg");
  background-size: cover;
  background-position: center;
  > h1 {
    position: absolute;
    bottom: 2em;
    right: 2em;
    color: white;
  }

  > h3 {
    position: absolute;
    bottom: 1em;
    right: 2em;
    color: white;
  }
}