@require "variables";

.navigation
  box-sizing border-box
  border-right #369 1px solid
  border-top #369 1px solid
  position fixed
  top topBarHeight
  bottom 0
  padding 0
  margin 0
  width 0
  z-index 3
  background white
  transition width 200ms linear
  overflow-x hidden
  overflow-y auto
  > ul
    bottom: 0
    padding: 0
    margin: 0

.nav-item
  height: topBarHeight     
  list-style-type: none
  line-height: topBarHeight
  display: block
  white-space: nowrap
  padding 0
  > a
    padding: 0;
    display: block;
    width: 100%;
    cursor: pointer;
    height: 60px;
    box-sizing: border-box;
    border-bottom: #369 1px solid;
    &::before
      display: inline-block
      line-height: topBarHeight
      width: topBarHeight
      text-align: center
    &:hover
      background: #369;
      color: white;     



