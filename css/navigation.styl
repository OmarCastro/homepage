@require "variables";

.navigation{
  box-sizing: border-box;
  border-right: #369 1px solid;
  border-top: #369 1px solid;
  position: fixed;
  top: topBarHeight;
  bottom: 0;
  padding: 0;
  margin: 0;
  width: 0;
  z-index: 3;
  background: white;
  transition: width 150ms linear;
  overflow-x: hidden;
  overflow-y: auto;

  > ul {
    bottom: 0;
    padding: 0;
    margin: 0;
  }

  > ul > li{
    height: topBarHeight     
   list-style-type: none;
   line-height: topBarHeight
    display: block;
    white-space: nowrap;
    > a{
        padding: 0;
        color: #333;
        display: block;
        width: 100%;
        cursor: pointer;
        height: 60px;
        box-sizing: border-box;
        border-bottom: #369 1px solid;
        &:hover{
          background: #369;
          color: white;     
        }
      }
  }
}


.menu-button
  padding: 0px;
  width: topBarHeight
  height: topBarHeight
  text-align: left;
  font-size: inherit;
  font-family: inherit;
  border: none;
  outline: none;
  &:before
    text-align: center;
    width: 100%;
    display: block;
    line-height: 60px;
  &:focus
    color white
    background #336699
  &:hover + .navigation
    width: topBarHeight
    @media mqTablet
      width: navFullWidth;

.menu-button:focus + .navigation,
.menu-button:active + .navigation,
.navigation:hover{
  width: navFullWidth
}

.navigation.hide:hover{
  width: 0;
}