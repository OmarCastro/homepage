.menu-button
  padding: 0px;
  width: topBarHeight
  height: topBarHeight
  text-align: left;
  font-size: inherit;
  font-family: inherit;
  border: none;
  outline: none;
  &:before
    text-align: center;
    width: 100%;
    display: block;
    line-height: 60px;
  &:focus
    color white
    background #336699
  &:hover + .navigation
    width: topBarHeight
    @media mqTablet
      width: navFullWidth;

.desktop .menu-button:hover + .navigation
  width: topBarHeight

.menu-button:focus + .navigation,
.menu-button:active + .navigation,
.navigation:hover{
  width: navFullWidth
}

.navigation.hide:hover{
  width: 0;
}